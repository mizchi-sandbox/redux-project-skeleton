{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "flowtype",
    "react",
    "import"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "firebase": true
  },
  "rules": {
    "strict": 0,
    "eqeqeq": [2, "smart"],
    "semi": 2,
    "quotes": [2, "double"],
    "no-dupe-args": 2,
    "no-dupe-keys": 2,
    "no-multi-spaces": 2,
    "array-bracket-spacing": 2,
    "block-spacing": 2,
    "comma-spacing": 2,
    "eol-last": 2,
    "indent": [2, 2],
    "linebreak-style": 2,
    "no-mixed-spaces-and-tabs": [2, "smart-tabs"],
    "no-spaced-func": 2,
    "no-trailing-spaces": 2,
    "space-before-blocks": 2,
    "arrow-spacing": 2,
    "key-spacing": [2, { "beforeColon": false, "afterColon": true }],
    "object-curly-spacing": [2, "always"],
    "no-var": 2,
    "prefer-const": 2,
    "no-unused-vars": [2, { "argsIgnorePattern": "^_" }],
    "no-undef": 2,
    "prefer-arrow-callback": 2,
    "array-callback-return": 2,
    "no-multiple-empty-lines": [2, {max: 1}],
    "no-new-object": 2,
    "no-unneeded-ternary": 2,
    "no-duplicate-case": 2,
    "no-ex-assign": 2,
    "no-inner-declarations": 2,
    "no-obj-calls": 2,
    "no-invalid-regexp": 2,
    "no-sparse-arrays": 2,
    "valid-typeof": 2,
    "dot-notation": 2,
    "no-caller": 2,
    "no-eval": 2,
    "no-extend-native": 2,
    "no-implied-eval": 2,
    "no-loop-func": 2,
    "no-multi-str": 2,
    "no-native-reassign": 2,
    "no-new-wrappers": 2,
    "no-proto": 2,
    "no-redeclare": 2,
    "no-self-compare": 2,
    "no-useless-call": 2,
    "no-useless-concat": 2,
    "radix": 2,
    "wrap-iife": 2,
    "constructor-super": 2,
    "no-class-assign": 2,
    "no-const-assign": 2,
    "no-dupe-class-members": 2,
    "no-this-before-super": 2,
    "vars-on-top": 2,
    "no-unreachable": 2,
    "no-param-reassign": 2,
    "no-with": 2,
    "flowtype/define-flow-type": 1,
    "flowtype/use-flow-type": 1,
    "import/newline-after-import": 2,
    "import/imports-first": 2,
    "react/jsx-uses-vars": 2,
  }
}
